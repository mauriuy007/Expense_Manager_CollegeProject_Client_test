@using LibreriaLogicaAplicacion.Dtos.Payment
@model IEnumerable<GetAllPaymentsDto>

@{
    ViewData["Title"] = "Mis Pagos";
}

<h2 class="mt-3 mb-4 text-center">Mis Pagos</h2>

@if (ViewBag.Error != null)
{
        <div class="alert alert-info text-center">
        @ViewBag.Error
        </div>
}

@if (Model != null && Model.Any())
{
        <h3 class="mt-4">Pagos Encontrados</h3>

        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Descripción</th>
                    <th>Monto</th>
                    <th>Tipo de gasto</th>
                    <th>Fecha de pago</th>
                    <th>Tipo de pago</th>
                    <th>Balance pendiente</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model)
            {
                        <tr>
                            <td>@p.Description</td>
                            <td>@p.Amount</td>
                            <td>@p.ExpenseType</td>
                            <td>@p.PayDate</td>
                            <td>@p.PaymentType</td>
                            <td>@p.RemainingBalance</td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p class="text-center mt-4">No tienes pagos registrados.</p>
}