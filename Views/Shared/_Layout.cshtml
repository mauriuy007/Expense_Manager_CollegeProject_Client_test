<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - N3C_348209_parodi_client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/N3C_348209_parodi_client.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{
            var role = Context.Session.GetString("role");
            var isLogged = !string.IsNullOrEmpty(role);
        }

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Botón visible solo si NO está logueado -->
                        @if (!isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Iniciar sesión</a>
                            </li>
                        }

                        <!-- Botones visibles si está logueado (cualquier rol) -->
                        @if (isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout">Cerrar sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Payment" asp-action="Create">Crear un pago</a>
                            </li>

                        }
                        <!-- RF2 — Solo Gerentes -->
                        @if (role == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Team" asp-action="GetTeamsByPayments">Buscar equipos</a>
                            </li>
                        }

                <!-- RF2 — Solo Empleados y Gerentes -->
                        @if (role == "Employee" || role == "Manager")
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Payment" asp-action="UserPayments">Mis pagos</a>
                        </li>
                        }

                <!-- Solo Administradores -->
                        @if (role == "Administrator")
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="User" asp-action="ResetPassword">Resetear contraseña usuario</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Expense" asp-action="Logs">
                                Auditoría de gastos
                            </a>
                        </li>
                        }

            </ul>
        </div>
    </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - N3C_348209_parodi_client - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
