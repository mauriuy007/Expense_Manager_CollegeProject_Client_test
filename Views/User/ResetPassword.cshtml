@model N3C_348209_parodi_client.Models.Dtos.User.UserIndexDto

@{
    ViewData["Title"] = "Resetear Contraseña";
}

<h2 class="mt-4 text-center">Resetear Contraseña de Usuario</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">

        <form asp-action="ResetPassword" method="post">

            <div class="form-group mb-3">
                <label asp-for="email" class="form-label">Email del usuario</label>
                <input asp-for="email" class="form-control" placeholder="usuario@mail.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <!-- Campos requeridos por la API aunque no los uses -->
            <input type="hidden" asp-for="name" />
            <input type="hidden" asp-for="lastName" />

            <button type="submit" class="btn btn-warning w-100 mt-2">
                Resetear Contraseña
            </button>

        </form>

        @if (ViewBag.NewPassword != null)
        {
                <div class="alert alert-success mt-4 text-center">
                    Nueva contraseña generada:
                    <strong>@ViewBag.NewPassword</strong>
                </div>
        }

        @if (ViewBag.Error != null)
        {
                <div class="alert alert-danger mt-4 text-center">
                @ViewBag.Error
                </div>
        }

    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
